<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".View.Profile">

    <TextView
        android:id="@+id/page1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:text="Page 1 "
        android:textColor="#222223"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="20dp"
        android:text="MYDIARY"
        android:textColor="#222223"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textbiasa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:text="Hallo aku MYDIARY"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/biasa2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textbiasa"
        android:layout_alignParentStart="true"
        android:text="Akan Mencatat Keseharian Mu"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="150px"
        android:layout_height="400px"
        android:layout_below="@id/biasa2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_baseline_arrow_downward_24" />

</RelativeLayout>